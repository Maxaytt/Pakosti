{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Swagger": {
    "IgnoredNamespaceIdentifiers": [
      "Commands",
      "Queries"
    ]
  },
  "Settings": {
    "Currency": {
      "NameLength": 3
    },
    "Product": {
      "NameLengths": [5, 150],
      "DescriptionLengths": [20, 1500]
    },
    "Category": {
      "NameLengths": [3, 50]
    },
    "Review": {
      "HeaderLengths": [5, 100],
      "BodyLengths": [25, 1500]
    },
    "User": {
      "EmailMaxLength": 50,
      "PasswordMinLength": 8,
      "FirstNameMaxLength": 64,
      "LastNameMaxLength": 64,
      "UsernameLengths": [5, 25]
    },
    "CurrencyAppBaseUrl": "https://openexchangerates.org/api/latest.json"
  },
  "Jwt": {
    "Expire": 60,
    "Issuer": "https://localhost:5001",
    "Audience": "https://localhost:5001",
    "TokenValidityInMinutes": 30
  },
  "AllowedHosts": "*"
}